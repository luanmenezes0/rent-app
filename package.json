{
  "name": "my-remix-app-0728",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "dev:serve": "binode --require ./mocks -- @remix-run/serve:remix-serve ./build/index.js",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve ./build/index.js",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve ./build/index.js",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.13.3",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.13.0",
    "@prisma/client": "^5.19.1",
    "@remix-run/css-bundle": "^2.12.1",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^2.12.1",
    "@remix-run/server-runtime": "^2.12.1",
    "@remix-run/v1-route-convention": "^0.1.4",
    "@remix-validated-form/with-zod": "^2.0.7",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.5.6",
    "isbot": "^3.7.0",
    "prisma": "^5.19.1",
    "puppeteer": "^22.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "remix-validated-form": "^5.1.5",
    "tiny-invariant": "^1.3.3",
    "tsx": "^4.19.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@faker-js/faker": "^8.4.1",
    "@remix-run/dev": "^2.12.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^18.7.18",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "binode": "^1.0.5",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.14.0",
    "eslint": "^9.11.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-react": "^7.36.1",
    "globals": "^15.9.0",
    "happy-dom": "^9.20.3",
    "msw": "^0.47.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "start-server-and-test": "^1.14.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.7",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20"
  },
